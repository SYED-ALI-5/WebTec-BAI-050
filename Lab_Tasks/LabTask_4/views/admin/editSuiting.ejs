<div class="container my-5">
    <div class="card shadow rounded">
        <div class="card-body">
            <h3 class="card-title mb-4 text-center">Edit Suiting Item</h3>
            <form action="/admin/suiting/edit/<%= suiting._id %>" method="POST">
                <h5 class="text-primary">Coat</h5>
                <div class="mb-3">
                    <label class="form-label">Image</label>
                    <input type="text" class="form-control" name="image1" value="<%= suiting.image1 %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Hover Image</label>
                    <input type="text" class="form-control" name="image2" value="<%= suiting.image2 %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea class="form-control" name="desc1" rows="2" required><%= suiting.desc1 %></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Price</label>
                    <input type="text" class="form-control" name="price1" value="<%= suiting.price1 %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Sizes (comma-separated)</label>
                    <input type="text" class="form-control" name="sizes1" value="<%= suiting.sizes1 %>" required>
                </div>

                <hr class="my-4">

                <h5 class="text-primary">Pant</h5>
                <div class="mb-3">
                    <label class="form-label">Image</label>
                    <input type="text" class="form-control" name="image3" value="<%= suiting.image3 %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Hover Image</label>
                    <input type="text" class="form-control" name="image4" value="<%= suiting.image4 %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea class="form-control" name="desc2" rows="2" required><%= suiting.desc2 %></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Price</label>
                    <input type="text" class="form-control" name="price2" value="<%= suiting.price2 %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Sizes (comma-separated)</label>
                    <input type="text" class="form-control" name="sizes2" value="<%= suiting.sizes2 %>" required>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Update Suiting</button>
                </div>
            </form>
        </div>
    </div>
</div>