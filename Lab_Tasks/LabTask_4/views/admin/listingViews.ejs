<div class="container mt-5 text-black">
    <h2 class="mb-4 text-center">All View Items</h2>

    <% if (views.length===0) { %>
        <p class="text-center">No views found.</p>
        <% } else { %>
            <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
                <% views.forEach(view=> { %>
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <img src="<%= view.image %>" class="card-img-top" alt="<%= view.name %>"
                                style="height: 550px; object-fit: cover;">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= view.name %>
                                </h5>
                                <p class="card-text">
                                    <%= view.description %>
                                </p>

                                <div class="d-flex justify-content-between mt-3">
                                    <a href="/admin/views/edit/<%= view._id %>"
                                        class="btn btn-sm btn-warning text-white py-2"
                                        style="height: 40px; width: 70px;">Edit</a>

                                    <form action="/admin/views/delete/<%= view._id %>" method="POST"
                                        onsubmit="return confirm('Are you sure you want to delete this view?');">
                                        <button type="submit" class="btn btn-sm bg-danger text-white m-0"
                                            style="height: 40px; width: 70px;">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <% } %>
</div>