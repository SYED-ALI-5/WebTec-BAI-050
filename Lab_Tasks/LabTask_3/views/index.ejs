<section class="d-flex w-100 landing-sec">
    <div
        class="landing-left z-n1 d-flex flex-grow-1 align-items-end justify-content-around text-white text-center position-relative">
        <div class="landing-left-content pb-5">
            <h1 class="pb-3">NEW IN.</h1>
            <p class="pb-3">Spring-Summer 2025.</p>
            <button
                class="landing-button text-black bg-white fw-bold border-0 rounded-pill mt-2 px-4 py-2">View.</button>
        </div>
    </div>
    <div
        class="landing-right z-n1 d-flex flex-grow-1 align-items-end justify-content-around text-white text-center position-relative">
        <div class="landing-right-content pb-5">
            <h1 class="pb-3">ANON.</h1>
            <p class="pb-3">NO FACES, JUST FITS.</p>
            <button
                class="landing-button text-black bg-white fw-bold border-0 rounded-pill mt-2 px-4 py-2">View.</button>
        </div>
    </div>
</section>

<section class="d-flex flex-column justify-content-center mt-5 mx-4 text-black">
    <div class="d-flex flex-column">
        <div class="d-flex flex-row align-items-center view-head">
            <h2>View</h2>
            <img src="/images/Assets/arrow.jpeg" alt="">
        </div>
    </div>
    <div class="d-flex flex-row flex-wrap align-items-center justify-content-between mt-4 mb-5">
        <% for( let index = 0; index < views.length; index++ ) { %>
        <div class="view-article">
            <div class="image-text-wrapper">
                <a href=""><img src="<%= views[index].image %>" alt=""></a>
                <h1> <%= views[index].name %> </h1>
                <div class="d-flex flex-row mt-1 flex-wrap">
                    <p class="pe-1 text-wrap">Model wears our <a class="text-black" href=""><%= views[index].description %></a></p>
                </div>
            </div>
            <button
                class="view-button text-black bg-white fw-bold border border-dark rounded-pill mt-3 px-4 py-2">View.</button>
        </div>
        <% } %>
    </div>
</section>

<section class="d-flex flex-row flex-wrap align-items-start justify-content-left">
    <div class="d-flex flex-row align-items-start justify-content-between w-100 bg-light testing">
        <div class="text-black px-3 pt-5 flex-grow-1 fs-6">
            <h1 class="pb-4 fs-2">SUITING.</h1>
            <span class="suiting-button text-black fw-bold border border-dark rounded-pill ms-2 px-4 py-2">View
                All.</span>
            <p class="pt-4">While many of our pieces match, we would not necessarily consider ourselves makers of
                suits in the
                traditional sense. Our approach to suiting nods to formal wear, but more often than not, our pieces
                lend themselves
                to a more laid-back, easy-to-wear aesthetic, or relaxed tailoring as we like to call it.
            </p>
        </div>
        <div class="suiting-img flex-grow-1 d-flex justify-content-center">
            <img src="/images/Assets/suiting.webp" alt="">
        </div>
    </div>
    <div class="suiting-right d-flex flex-row overflow-auto p-0 w-100">
        <% for( let index = 0; index < suitings.length; index++ ) { %>
        <div class="d-flex flex-nowrap">
            <div class="suiting-article position-relative text-black my-2 mx-1 text-wrap">
                <a href="">
                    <img class="original-image" src="<%= suitings[index].image1 %>" alt="">
                    <img class="hover-image" src="<%= suitings[index].image2 %>" alt="">
                </a>
                <p class="default-text"><%= suitings[index].desc1 %></p>
                <p class="default-text" style="margin-top: 5px;"><%= suitings[index].price1 %></p>
                <p class="hover-text">Size Availability:</p>
                <p class="hover-text" style="margin-top: 5px;"><%= suitings[index].sizes1 %></p>
            </div>

            <div class="suiting-article position-relative text-black my-2 mx-1 text-wrap">
                <a href="">
                    <img class="original-image" src="<%= suitings[index].image3 %>" alt="">
                    <img class="hover-image" src="<%= suitings[index].image4 %>" alt="">
                </a>
                <p class="default-text"><%= suitings[index].desc2 %></p>
                <p class="default-text" style="margin-top: 5px;"><%= suitings[index].price2 %></p>
                <p class="hover-text">Size Availability:</p>
                <p class="hover-text" style="margin-top: 5px;"><%= suitings[index].sizes2 %></p>
            </div>
        </div>
        <% } %>
    </div>
</section>

<section
    class="paraboot-sec text-black mt-4 mb-5 d-flex flex-column justify-content-end align-items-start position-relative">
    <div class="px-5 pb-5">
